{
    "manifest_version": 3,
    "name": "Patates Tim",
    "version": "1.1",
    "description": "Watch what you want",
    "icons": {
        "128": "icons/icon128.png",
        "48": "icons/icon48.png",
        "16": "icons/icon16.png"
    },

    "options_page": "popup.html",

    "background": {
        "service_worker": "background.js"
    },

    "content_scripts": [{
        "matches": ["https://www.youtube.com/*"],
        "js": ["content.js"]
    }],

    "permissions": [
        "contextMenus",
        "tabs",
        "storage",
        "webNavigation",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html"
    }
}

